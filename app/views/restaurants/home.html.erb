<head>
  <script>
    <!-- Validate zip code input -->
    $(document).ready(function() {
        $("#form").submit(function() {
          var regex = /^\d{5}$/
          var input = $("#form #zipcode").val()
          
          if (input.search(regex) == -1 ) {
            alert("Please enter a valid zipcode");
            window.location.reload();
            return false;
          }
       });
    });
  </script>
