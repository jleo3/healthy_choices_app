<!-- Home page header -->
<div class="jumbotron">
  <div class="container">
    <div class="container">
      <%= link_to "<button class='btn-large btn-success'>Add new Restaurant</button>".html_safe, restaurants_search_path %>
    </div>
    <h2>Find bookmarked restaurants near:</h2>
    <div class="row-fluid">
      <div class="span4 well">
	<%= form_tag home_path, method: "get", :id => "form", :class => "form-search" do %>
	<%= label_tag "Zipcode:", nil,:class => "control-label" %>
	<%= text_field_tag "zipcode", nil, :class => "input-large search-query" %>
	<%= submit_tag "Submit", :class => "btn-large btn-primary" %>
	<% end %>
      </div>
    </div>
    <% unless @search_zip.nil? %>
        <% if @near_restaurants.empty? %>
            <h2>No results found</h2>
        <% else %>
            <table class="table table-hover">
               <tr>
		 <td><h3>#</h3></td>
		 <td><h3>Restaurant</h3></td>
		 <td><h3>Address</h3></td>
		 <td><h3>Yelp Rating</h3></td>
		 <td></td>
	       </tr>
	       <% count = 0 %>
               <% @near_restaurants.each do |restaurant| %>
	          <% count += 1 %>
                  <tr>
		    <td><%= count %></td>
		    <td><%= restaurant.name %></td>
		    <td><%= restaurant.address %></td>
		    <td><%= restaurant.yelp_rating %></td>
		  </tr>
               <% end %>
	    </table>
	    <div style='width: 800px;'>
	      <div id="map" style='width: 800px; height: 400px;'>
	      </div>
	    </div>
	    <script type="text/javascript">
	      handler = Gmaps.build('Google');
	      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
	      markers = handler.addMarkers(<%=raw @hash.to_json %>);
	      handler.bounds.extendWith(markers);
	      handler.fitMapToBounds();
	      });
	    </script>
	<% end %>
    <% end %>
  </div>
</div>

